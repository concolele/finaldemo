@model FinalDemo.Models.BoViewModel
<link rel="stylesheet" href="/Contents/bootstrap.min.css" />
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<link rel="stylesheet" href="/Contents/jquery-ui.min.css" />
<script type="text/javascript">
    $(function () {
        $("#txtSearch").autocomplete({
            source: '@Url.Action("SearchAuto")',
            minLenght: 2
        });
    });
</script>

<body>
    @{
        ViewBag.Title = "Thông tin Bộ";
        Layout = "~/Views/Share/Index.cshtml";
    }
    <div class="main">
        <div class="search">
            @using (Html.BeginForm())
            {
                @Html.TextBox("searchTerm", null, new { id = "txtSearch" })
                <input type="submit" value="Tìm Kiếm" />
            }


        </div>
        <div class="table-responsive">
            <table class="table">

                <tr>
                    <th>
                        Danh pháp khoa học
                    </th>
                    <th>
                        Tên tiếng việt
                    </th>
                    <th>
                        Người phát hiện
                    </th>
                    <th>
                        Năm phát hiện
                    </th>
                </tr>

                @foreach (var item in Model.Bos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DPKH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenTV)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NguoiPH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NamPH)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</body>