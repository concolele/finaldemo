@model  FinalDemo.Models.ChiViewModel
<link rel="stylesheet" href="/Contents/bootstrap.min.css" />
<script src="/Scripts/jquery-1.11.1.min.js"></script>
<script src="/Scripts/jquery-ui.min.js"></script>
<link rel="stylesheet" href="/Contents/jquery-ui.min.css" />
@{
    ViewBag.Title = "Chỉnh sửa thông tin Chi";
    Layout = "~/Views/Share/Index.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>EditEmpty</title>
</head>
<body>
    <form method="post" class="form-horizontal" action="/Chi/EditEmpty">

        @foreach (var item in Model.Chis)
        {
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="hidden" name="Chi.MaChi" id="Chi.MaChi" value='@item.MaChi' class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Kí Hiệu</label>
                <div class="col-sm-10">
                    <input type="text" name="Chi.KiHieu" id="Chi.KiHieu" value='@item.KiHieu' class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Họ</label>
                <div class="col-sm-10">
                    <input type="text" name="Chi.Ho" id="Chi.Ho" value='@item.Ho' class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Danh Pháp Khoa Học</label>
                <div class="col-sm-10">
                    <input type="text" name="Chi.DPKH" id="Chi.DPKH" value='@item.DPKH' class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Tên Tiếng Việt</label>
                <div class="col-sm-10">
                    <input type="text" name="Chi.TenTV" id="Chi.TenTV" value='@item.TenTV' class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Người phát hiện</label>
                <div class="col-sm-10">
                    <input type="text" name="Chi.NguoiPH" id="Chi.NguoiPH" value='@item.NguoiPH' class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Năm phát hiện</label>
                <div class="col-sm-10">
                    <input type="text" name="Chi.NamPH" id="Chi.NamPH" value='@item.NamPH' class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    <input type="hidden" name="Chi.TenNguoiTao" id="Chi.TenNguoiTao" value='@item.TenNguoiTao' class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="hidden" name="Chi.MaNguoiTao" id="Chi.MaNguoiTao" value='@item.TenNguoiTao' class="form-control" />
                </div>
            </div>
        }

        <br /><input type="submit" class="btn btn-default" value="Submit" />
    </form>

    <div>
        @Html.ActionLink("Back to List", "IndexChi")
    </div>
</body>

</html>