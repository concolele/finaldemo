@model FinalDemo.Models.LoaiViewModel
<link rel="stylesheet" href="/Contents/bootstrap.min.css" />
<script src="/Scripts/jquery-1.11.1.min.js"></script>
<script src="/Scripts/jquery-ui.min.js"></script>
<link rel="stylesheet" href="/Contents/jquery-ui.min.css" />
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Share/Index.cshtml";
}

<h2>Search</h2>

<p>
    @Html.ActionLink("CreateNew", "Create")
</p>
<form method="post" action="/Loai/Search">
    <input type="text" name="find" id="find" placeholder="Find">
    <input type="submit" value="Search" />
</form>
<table class="table table-hover">
    <tr>
        <th>
            Kí Hiệu
        </th>
        <th>
            Chi
        </th>
        <th>
            Danh pháp khoa học
        </th>
        <th>
            Tên tiếng Việt
        </th>
        <th>
            Tên khác
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đặc điểm sinh sản
        </th>
        <th>
            Đặc điểm giới tính
        </th>
        <th>
            Đặc điểm khác
        </th>
        <th>
            Mức độ
        </th>
        <th>
            Người phát hiện
        </th>
        <th>
            Năm phát hiện
        </th>
        <th>
            Tập tính sinh sản
        </th>
        <th>
            Kích cỡ trung bình
        </th>
        <th>
            Thức ăn
        </th>
        <th>
            Xuất xứ
        </th>
        <th>
            Hình ảnh
        </th>
    </tr>

    @foreach (var item in Model.Loais)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KiHieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DPKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DDSinhSan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DDGioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DDKhac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MucDo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NguoiPH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamPH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TapTinhSH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KichCoTB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThucAn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.XuatXu)
            </td>
            <td>
                <img src="@Url.Content("~/Photos/"+@item.Image)" alt="" class="img-rounded" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaLoai }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaLoai }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaLoai })
            </td>
        </tr>
    }

</table>
