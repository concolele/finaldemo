@model FinalDemo.Models.LoaiViewModel
@{
    Layout = "~/Views/Share/Index.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>Thông tin Loài</title>

    <link rel="stylesheet" href="/Contents/bootstrap.min.css" />
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="/Contents/jquery-ui.min.css" />
    <script type="text/javascript">
        $(function () {
            $("#txtSearch").autocomplete({
                source: '@Url.Action("SearchAuto")',
                minLenght: 2
            });
        });
    </script>
</head>
<body>
    <div class="main">
        <div class="search">
            @using (Html.BeginForm())
            {
                @Html.TextBox("searchTerm", null, new { id = "txtSearch" })
                <input type="submit" value="Tìm Kiếm" />
            }


        </div>

        <table class="table">
            <tr class="trbo">
                <th>
                    Hình ảnh
                </th>
                <th>
                    Danh pháp khoa học <br />
                    Tên tiếng việt
                </th>
            </tr>

            @foreach (var item in Model.Loais)
            {
                <tr class="info_bo">
                    <td>
                        <img src="@Url.Content("~/Photos/"+@item.Image)" alt="" class="img-rounded" style="width:140px;height:140px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DPKH) <br>
                        @Html.DisplayFor(modelItem => item.TenTG)
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
</html>
